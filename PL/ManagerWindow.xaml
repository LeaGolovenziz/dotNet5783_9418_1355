<Window x:Class="PL.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="ManagerWindow"  WindowStartupLocation="CenterScreen">
    <Window.Resources>

    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height ="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions >
        <Menu HorizontalAlignment="Center">
            <MenuItem Header="                      Products" Height="39" Width="250" FontSize="18" Grid.Column="0" Click="MenuItem_Click_ShowProductList"/>
            <MenuItem Header="                      Orders list" Height="39" Width="250" FontSize="18" Grid.Column="0" Click="MenuItem_Click_ShowOrderList"/>
            <MenuItem Header="                      Orders tracking" Height="39" Width="300" FontSize="18" Grid.Column="0" Click="MenuItem_Click_ShowOrderTracking"/>
        </Menu>
        <MediaElement x:Name="video" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Grid.Row="1" Volume="0.05" Position="00:00:00"  />
    </Grid>
</Window>
